<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.am_lab">
    <!-- Allows applications to access information about networks. Protection level: normal -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- Allows applications to open network sockets. Protection level: normal -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity android:name=".View.LedScreenActivity"/>
        <activity android:name=".View.ImuGraphsActivity"/>
        <activity android:name=".View.JoystickActivity"/>
        <activity android:name=".View.SensorGraphsActivity"/>
        <activity android:name=".View.SettingsActivity"
            android:theme="@style/Pref"
            android:label="Settings"/>
        <activity android:name=".View.DynamicListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>